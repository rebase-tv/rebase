---
export interface Props {
  avatar: string;
  handle: string;
  message: string;
}
---

<li class="flex items-center space-x-1 justify-start">
  <img
    src={Astro.props.avatar}
    alt={Astro.props.handle}
    width={24}
    height={24}
    class="rounded-full"
  />
  <p class="opacity-50">{Astro.props.handle}</p>
  <p>{Astro.props.message}</p>
</li>
